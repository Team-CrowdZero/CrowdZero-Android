<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CrowdZeroAndroid" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Splash Screen -->
    <style name="Theme.CrowdZeroAndroid.Splash" parent="Theme.SplashScreen">
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowSplashScreenAnimationDuration">0</item>
        <item name="postSplashScreenTheme">@style/Theme.CrowdZeroAndroid</item>
        <item name="windowSplashScreenAnimatedIcon">@android:color/transparent</item>
    </style>
</resources>